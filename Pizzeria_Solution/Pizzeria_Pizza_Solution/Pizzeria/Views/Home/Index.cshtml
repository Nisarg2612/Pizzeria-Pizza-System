@section Scripts{
    <script>
        function loadSlider() {
            $('.slider').owlCarousel({
                margin: 0,
                loop: true,
                nav: false,
                center: true,
                dots: false,
                autoplay: true,
                autoplayTimeout: 8000,
                mouseDrag: true,
                touchDrag: true,
                pullDrag: true,
                freeDrag: false,
                autoplayHoverPause: false,
                items: 1
            });
        };

        loadSlider();
    </script>
}
