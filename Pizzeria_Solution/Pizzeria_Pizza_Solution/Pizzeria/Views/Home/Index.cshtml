@{
    ViewBag.Title = "Home";
}

<link href="~/css/public/owl.carousel.min.css" rel="stylesheet" />
<link href="~/css/public/owl.theme.default.css" rel="stylesheet" />
<script src="~/js/public/owl.carousel.min.js"></script>


<section id="carousel-section">

    <div id="delivery-pickup">
        <div>

            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#Delievery" aria-controls="home" role="tab" data-toggle="tab">Delievery</a></li>
                <li role="presentation"><a href="#Pickup" aria-controls="profile" role="tab" data-toggle="tab">Pick up</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane fade in active" id="Delievery">
